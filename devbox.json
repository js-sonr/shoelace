{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.1/.schema/devbox.schema.json",
  "packages": [
    "pnpm@latest",
    "bun@latest"
  ],
  "shell": {
    "init_hook": [
      "bun install"
    ],
    "scripts": {
      "build": [
        "bun run build"
      ],
      "publish": [
        "npm publish"
      ],
      "bump": [
        "npm version patch"
      ]
    }
  }
}
